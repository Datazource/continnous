{
  "rules": {
    ".read": false,
    ".write": false,
    "organizations": {
      "$organization_id": {
        ".read": "auth != null",
        ".write": "!data.exists() && newData.exists() || root.child('organization_admins/' + $organization_id + '/' + auth.uid).exists()",
        "admins": {
          ".read": "data.child(auth.uid).exists()"
        }
      }
    },
    "organization_admins": {
      "$organization_id": {
        ".read": "data.child(auth.uid).exists()",
        ".write": "data.child(auth.uid).exists()"
      }
    },
    "organization_permissions": {
      "$organization_id": {
        ".read": "root.child('organization_admins/' + $organization_id + '/' + auth.uid).exists()",
        ".write": "root.child('organization_admins/' + $organization_id + '/' + auth.uid).exists()"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
